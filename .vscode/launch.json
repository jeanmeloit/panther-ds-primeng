{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "chrome",
            "request": "launch",
            "name": "Launch Chrome against localhost",
            "url": "http://localhost:4200",
            "sourceMaps": true,
            "webRoot": "${workspaceRoot}"
        },
        {
          "type": "chrome",
          "request": "launch",
          "name": "Chrome disable-web-security",
          "url": "http://localhost:4200",
          "webRoot": "${workspaceFolder}",
          "runtimeArgs": ["--disable-web-security"]
        },
        {
            "type": "chrome",
            "request": "attach",
            "name": "Attach to Chrome",
            "port": 9222,
            "sourceMaps": true,
            "webRoot": "${workspaceRoot}"
        }
    ]
}
